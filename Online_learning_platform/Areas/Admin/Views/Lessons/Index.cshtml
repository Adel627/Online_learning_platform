@model List<Lesson>

<h2>All Lessons</h2>
<br />
<br />


@if (Model.Count() > 0)
{
    <a asp-route-coursesId="@Model[0].CoursesId" asp-controller="Lessons" asp-action="Create" class="btn btn-primary">Create Lesson</a>
    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead>
        <th>order</th>
        <th>course id</th>
        <th>title</th>
               
        <th>Details</th>        
        <th>Delete</th>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Lesson_Id</td>
                    <td>@item.CoursesId</td>
                    <td>@item.Title</td>
                    

                    <center>

                    <td />
                    <a asp-route-lessonId="@item.Lesson_Id" asp-route-courseId="@item.CoursesId" asp-action="Details" class="btn btn-success">Details</a>

                    <td />
                    <a asp-route-lessonId="@item.Lesson_Id" asp-route-courseId="@item.CoursesId" asp-action="Delete" class="btn btn-Danger">Delete</a>

                    <td />
                    </center>

                </tr>

            }

        </tbody>

    </table>
}
else
{
    <a asp-controller="Lessons" asp-action="Create" class="btn btn-primary">Create Lesson</a>
    <br />
    <br />

    <div class="alert alert-danger">
        <h4>There are no Lessons</h4>
    </div>

}





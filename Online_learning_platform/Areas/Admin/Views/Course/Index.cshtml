@model List<Courses>

<h2>All courses</h2>
<br />
<br />

<a asp-controller="Course" asp-action="Create" class="btn btn-primary">Create Course</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>category</th>
        <th>Trainer</th>
        <th>Image</th>
        <th>Update</th>
        <th>Delete</th>
        <th>Lessons</th>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                    <td>@item.CoursesId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Categories.Name</td>
                    <td>@item.Trainer.Name</td>
                    <td>
                        <img src="~/images/@item.Img" style="width:48px" class="img-thumbnail" />
                    </td>

                    <center>
                    <td />
                    <a asp-route-CoursesId="@item.CoursesId" asp-action="Edit" class="btn btn-info">Update</a>
                    <td />
                    <a asp-route-id="@item.CoursesId" asp-action="Delete" class="btn btn-Danger">Delete</a>
                    <td />
                    <a asp-route-id="@item.CoursesId" asp-controller="Lessons" asp-action="Index" class="btn btn-success">Lessons</a>
                    <td />

                    </center>

                </tr>

            }

        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are no Courses</h4>
    </div>

}




